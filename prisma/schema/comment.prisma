model Comment {
    id       String    @id @default(uuid())
    content  String    @db.Text
    authorId String //better auth manage
    postId   String
    post     Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
    parentId String?
    parent   Comment?  @relation("CommentReplices", fields: [parentId], references: [id], onDelete: Cascade)
    replies  Comment[] @relation("CommentReplices")

    status    CommentStatus @default(APPROVED)
    createdAt DateTime      @default(now())
    updatedAt DateTime      @updatedAt

    @@index([postId])
    @@index([authorId])
    @@map("comments")
}

enum CommentStatus {
    APPROVED
    REJECT
}
